        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "debug": "^4.3.7",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.1.4",
        "hpp": "^0.2.3",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.15",
        "stripe": "^14.4.0",
        "swagger-jsdoc": "^6.2.8",
