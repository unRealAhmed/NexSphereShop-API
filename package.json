        "@types/express": "^4.17.21",
        "@types/hpp": "^0.2.6",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.5.5",
        "@types/nodemailer": "^6.4.15",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
